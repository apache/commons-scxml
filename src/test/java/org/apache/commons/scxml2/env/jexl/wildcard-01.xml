<scxml xmlns="http://www.w3.org/2005/07/scxml"
       xmlns:cs="https://commons.apache.org/scxml"
       version="1.0"
       datamodel="jexl"
       initial="state1">
     <state id="state1">
           <onentry>
               <!-- since JEXL 3.6, 'switch' is a keyword, so we use 'swtch' instead -->
               <cs:var name="swtch" expr="4" />
           </onentry>
           <!-- We'll trigger 'foo.bar.baz' event,
                and therefore, must end up in state4 -->
           <transition event="*" cond="swtch eq 2" target="state2"/>
           <transition event="foo.*" cond="swtch eq 3" target="state3"/>
           <transition event="foo.bar.*" cond="swtch eq 4" target="state4"/>
           <!-- If something goes wrong, ensure we end up in the error state and not loop forever -->
           <transition event="error.execution" target="error" />
     </state>
     <final id="state2"/>
     <final id="state3"/>
     <final id="state4"/>
     <final id="error"/>
</scxml>
